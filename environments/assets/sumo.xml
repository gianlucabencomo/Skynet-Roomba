<mujoco model="sumo">
    <option iterations="4" ls_iterations="8" solver="Newton" timestep="0.005">
        <flag eulerdamp="disable"/>
    </option>
    <default>
        <motor ctrllimited="true" ctrlrange="-1 1"/>
        <geom density="500"/>
        <joint damping="0.1" armature="0.1"/>
    </default>
    <asset>
        <texture name="skybox" type="skybox" builtin="gradient" rgb1=".4 .6 .8" rgb2="0 0 0"
               width="800" height="800" mark="random" markrgb="1 1 1"/>
        <material name="sky" texture="skybox" emission="1"/>
        <material name="roomba1_color" rgba="0.2 0.6 1 1"/>   <!-- Blue -->
        <material name="roomba2_color" rgba="1 0.3 0.3 1"/>   <!-- Red -->
        <material name="floor_color" rgba="0.2 0.2 0.2 1"/>
    </asset>
    <custom>
        <numeric data="8" name="max_contact_points"/>
        <numeric data="8" name="max_geom_pairs"/>
    </custom>
    <worldbody>
        <geom name="floor" type="cylinder" size="2 0.1" pos="0 0 0" material="floor_color"/>
        <light name="light" pos="0 0 7" dir="0 0 -1" mode="fixed"/>
        <camera name="side" pos="-4 0 2" xyaxes="0 -1 0 1 0 2" mode="fixed"/>
        <body name="roomba1" pos="0 1 0.2">
            <freejoint name="root1"/>
            <geom name="roomba1" type="cylinder" size="0.15 0.035" pos="0 0 0" material="roomba1_color"/>
            <body name="lwheel1" pos="0.09 0 -0.02">
                <joint name="lwheel1" type="hinge" axis="1 0 0"/>
                <geom type="cylinder" size="0.04 0.02" quat="0 0.7071 0 0.7071"/>
            </body>
            <body name="rwheel1" pos="-0.09 0 -0.02">
                <joint name="rwheel1" type="hinge" axis="1 0 0"/>
                <geom type="cylinder" size="0.04 0.02" quat="0 0.7071 0 0.7071"/>
            </body>
            <body name="bwheel1" pos="0 0.09 -0.02">
                <geom type="sphere" size="0.04" friction="0 0 0"/>
            </body>
        </body>
        <body name="roomba2" pos="0 -1 0.2" quat="0 0 0 1">
            <freejoint name="root2"/>
            <geom name="roomba2" type="cylinder" size="0.15 0.035" pos="0 0 0" material="roomba2_color"/>
            <body name="lwheel2" pos="0.09 0 -0.02">
                <joint name="lwheel2" type="hinge" axis="1 0 0"/>
                <geom type="cylinder" size="0.04 0.02" quat="0 0.7071 0 0.7071"/>
            </body>
            <body name="rwheel2" pos="-0.09 0 -0.02">
                <joint name="rwheel2" type="hinge" axis="1 0 0"/>
                <geom type="cylinder" size="0.04 0.02" quat="0 0.7071 0 0.7071"/>
            </body>
            <body name="bwheel2" pos="0 0.09 -0.02">
                <geom type="sphere" size="0.04" friction="0 0 0"/>
            </body>
        </body>
    </worldbody>

    <contact>
        <exclude body1="roomba1" body2="lwheel1"/>
        <exclude body1="roomba1" body2="rwheel1"/>
        <exclude body1="roomba1" body2="bwheel1"/>
        <exclude body1="roomba2" body2="lwheel2"/>
        <exclude body1="roomba2" body2="rwheel2"/>
        <exclude body1="roomba2" body2="bwheel2"/>
    </contact>

    <actuator>
        <motor name="lwheel1" joint="lwheel1" gear="1"/>
        <motor name="rwheel1" joint="rwheel1" gear="1"/>
        <motor name="lwheel2" joint="lwheel2" gear="1"/>
        <motor name="rwheel2" joint="rwheel2" gear="1"/>
    </actuator>
</mujoco>